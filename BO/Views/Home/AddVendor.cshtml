
@{
    ViewBag.Title = "AddVendor";
    Layout = "~/Views/Shared/_Layout_master.cshtml";
}
<script src="~/script/jquery-1.7.1.min.js"></script>
<script>

        $(document).ready(function () {
            $("#Country").change(function () {
                var id = $(this).val();
                $("#v_city").empty();
                $.get("city_Bind", { country_id: id }, function (data) {
                    var v = "<option>---Select---</option>";
                    $.each(data, function (i, v1) {
                        v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";
                    });
                    $("#v_city").html(v);
                });
            });

            $("#state").change(function () {
                var id = $(this).val();
                $("#city").empty();
                $.get("City_Bind", { state_id: id }, function (data) {
                    var v = "<option>---Select---</option>";
                    $.each(data, function (i, v1) {
                        v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";
                    });
                    $("#city").html(v);
                });
            });
        });
</script>
<div class="page-container">
    <!--/content-inner-->
    <div class="left-content">
        <div class="inner-content">
            <div class="header-section">
                <!-- top_bg -->
                <div class="top_bg">

                    <div class="header_top">
                        <div class="top_right">
                            <ul>
                                <li><a href="#">help</a></li>|
                                <li><a href="#">Contact</a></li>|
                                <li><a href="#">Delivery information</a></li>
                            </ul>
                        </div>
                        <div class="top_left">
                            <h2><span></span> Call us : 032 2352 782</h2>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                </div>
                <div class="clearfix"></div>
                <!-- /top_bg -->
            </div>
            <div class="content">
                <div class="area">
                    <div class="col-md-6" style="margin-left:25%;">
                        <div class="forms">
                            <div class="form-grids widget-shadow">
                                <div class="form-title">
                                    <h4>Add Vendor</h4>
                                </div>
                                <div class="form-body">
                                    @using (Html.BeginForm("addvendor", "Home", FormMethod.Post))
                                    {
                                    <form>
                                        @*<div class="form-group"> <label for="exampleInputEmail1">Restaurant ID</label>          <input type="text" class="form-control" id="rcode" placeholder="Restaurant Id" /> </div>*@
                                        <div class="form-group"> <label for="exampleInputEmail1">Restaurant Name</label>        <input type="text" class="form-control" id="v_name" placeholder="Restaurant Name" /> </div>
                                        <div class="form-group"> <label for="exampleInputEmail1">Restaurant Address</label>     <textarea class="form-control" id="v_address" placeholder="Restaurant Address"rows="4" cols="5"></textarea> </div>
                                        <div class="form-group">Country Name @Html.DropDownList("Country", null, "Please Select", new { @class = "form-control" })</div>
                                        <div class="form-group"> <label for="exampleInputEmail1">City Name</label>              <select class="form-control" id="v_city" placeholder="City Name"></select> </div>
                                        <div class="form-group"> <label for="exampleInputEmail1">Area Name</label>              <select class="form-control" id="v_area" placeholder="Area Name"></select> </div>
                                        <div class="form-group"> <label for="exampleInputEmail1">Restaurant Licence No</label>  <input type="text" class="form-control" id="v_Licence" placeholder="Restaurant Licence No" /> </div>
                                        <div class="form-group"> <label for="exampleInputEmail1">Restaurant Contact</label>     <input type="text" class="form-control" id="v_Contact" placeholder="Restaurant Contact" /> </div>
                                        <div class="form-group"> <label for="exampleInputEmail1">Restaurant Mail Id</label>     <input type="text" class="form-control" id="v_mail" placeholder="Restaurant Mail Id" /> </div>
                                        <div class="form-group"> <label for="exampleInputFile">Licence File</label>             <input type="file" id="exampleInputFile"> </div>
                                        <div class="form-group"> <label for="exampleInputEmail1">Properiator Name</label>       <input type="text" class="form-control" id="v_prname" placeholder="Properiator Name" /> </div>
