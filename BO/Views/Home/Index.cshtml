
<!DOCTYPE html>
<html>
<head>
    <title>Backoffice</title>
    <!-- metatags-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Restaurant - Backoffice" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Meta tag Keywords -->
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" /><!--stylesheet-css-->
    <link rel="stylesheet" href="~/Content/font-awesome.css"><!--fontawesome-->
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet"><!--online fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway" rel="stylesheet"><!--online fonts-->
</head>
<body>
    <div class="w3ls-main">
        <div style="color:white;text-align:center;padding:10px;">
            <h1>Backoffice Login</h1>
        </div>
        <br /><br />
        <div class="wthree-container">

            <div class="wthree-form">
 
                <form method="post">
                    <div class="w3-user">
                        <span><i class="fa fa-user-o" aria-hidden="true"></i></span>
                        <input type="text" name="Username" placeholder="Username" required="">
                    </div>
                    <div class="clear"></div>
                    <div class="w3-psw">
                        <span><i class="fa fa-key" aria-hidden="true"></i></span>
                        <input type="password" name="password" placeholder="Password" required="">
                    </div>

 
                    <div class="clear"></div>
                    <div class="w3l-submit">
                        <input type="submit" value="login"   >
                    </div>
                 </form>
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                    </script>
                }
                
            </div>
        </div>
    </div>
    <div class="agileits-footer">
        <p>&copy; Backoffice Login. All Rights Reserved | Design by <a href="#">Roshnacorp</a></p>
    </div>
</body>
</html>
